{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "build",
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "isolatedModules": true,
    // "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "types/*"
  ],
  "exclude": [
    "node_modules"
  ]
}